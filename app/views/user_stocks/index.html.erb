<p id="notice"><%= notice %></p>

<h1>User Stocks</h1>

<table>
  <thead>
    <tr>
      <th>Stock symbol</th>
      <th>Company name</th>
      <th>Order quantity</th>
      <th>Stock price</th>
      <th>Total stock price</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_stocks.each do |user_stock| %>
      <tr>
        <td><%= user_stock.stock_symbol %></td>
        <td><%= user_stock.company_name %></td>
        <td><%= user_stock.order_quantity %></td>
        <td><%= user_stock.stock_price %></td>
        <td><%= user_stock.total_stock_price %></td>
        <td><%= user_stock.user_id %></td>
        <td><%= link_to 'Show', user_stock %></td>
        <td><%= link_to 'Edit', edit_user_stock_path(user_stock) %></td>
        <td><%= link_to 'Destroy', user_stock, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

