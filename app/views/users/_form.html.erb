<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <% user.errors.each do |error| %>
        <div><%= error.full_message %></div>
      <% end %>
    </div>
  <% end %>
  <div class="field">
    <%= form.text_field :first_name, placeholder: "First Name" %>
  </div>
  <div class="field">
    <%= form.text_field :last_name, placeholder: "Last Name" %>
  </div>
  <div class="field">
    <%= form.email_field :email, placeholder: "Email Address" %>
  </div>
  <% if action_name == "new" %>
  <div class="field">
    <%= form.password_field :password, placeholder: "Password (minimum 6 characters)" %>
  </div>
  <div class="field">
    <%= form.password_field :password_confirmation, placeholder: "Confirm Password" %>
  </div>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
