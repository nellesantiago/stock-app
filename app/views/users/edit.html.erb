<div class="new-user">
  <div class="bg-form">
  </div>
  <div class="overlay">
    <div class="container">
      <%= link_to users_path do %>
        <i class="fa-solid fa-circle-xmark"></i>      <% end %>
      <div class="box">
      <div class="left">
          <%= video_tag "writing.mp4", autoplay: true, loop: :loop, height: "450px" %>
        </div>
        <div class="right">
          <div class="logo">
            <%= image_tag "logo.png" %>
          </div>
          <div class="form">
            <%= render 'edit_form', user: @user %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
