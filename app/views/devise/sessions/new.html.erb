<div class="login">
  <div class="bg">
    <div class="bar-1"></div>
    <div class="bar-2nd">
      <div class="bar-2"></div>
      <div class="bar-3"></div>
    </div>
    <div class="bar-3rd">
      <div class="bar-4"></div>
      <div class="bar-5"></div>
    </div>
    <div class="bar-6"></div>
    <div class="bar-7"></div>
    <div class="bar-4th">
      <div class="bar-8"></div>
      <div class="bar-9"></div>
    </div>
    <div class="bar-10"></div>
  </div>
  <div class="container">
    <div class="left">
      <%= image_tag "logo.png" %>
      <div class="form">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.email_field :email, autocomplete: "email", placeholder: "Email" %>
          </div>
          <div class="field">
            <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password" %>
          </div>
          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
          <div class="actions">
            <%= f.submit "Log in" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
        <%= link_to root_path do %>
        <i class="fa-regular fa-circle-left"></i>
        <% end %>
      </div>
    </div>
    <div class="right">
      <%= image_tag "lock.png" %>
    </div>
  </div>
</div>
